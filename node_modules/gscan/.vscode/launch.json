    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/app/index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "WEB",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/app/index.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
    {
        "type": "node",
        "request": "launch",
        "name": "Launch CLI",
        "args": [
            "test/fixtures/themes/casper-permissions-chown-chmod.zip",
            "--zip"
        ],
        "program": "${workspaceFolder}/bin/cli.js"
    },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "env": {
                "NODE_ENV": "testing"
            },
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/**/*.test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
